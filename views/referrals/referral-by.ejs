<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>

<div class="container">
    <h2 class="center">Add Referee</h2>
    <div class="card grey lighten-5 animated fadeInDown">
        <form id="myForm" action="/add-referee" method="POST">
            <div class="row">
                <div class="input-field col s6">
                    <input type="text" id="name" required name="name" class="validate">
                    <label for="name">Name</label>
                </div>
                <div class="input-field col s6">
                    <input type="text" id="last_name" required name="last_name" class="validate">
                    <label for="last_name">Last Name</label>
                </div>
            </div>
            <div class="row">
                <div class="col s6 l6 input-field">
                  <input type="tel" onblur="formatPhone(this);" maxlength="10" name="phone" id="phone">
                  <label for="phone">Phone</label>
                </div>
                <div class="col s6 l6 input-field">
                    <input type="email" name="email" id="email">
                    <label for="email">Email</label>
                </div>
            <div>
                <button id="btn_add-referee" class="btn black waves-effect waves-light" type="submit">Add Referee</button>
            </div>
            <br>

        </form>
    </div>

</div>
</div>

<%- include('../partials/footer.ejs') %>